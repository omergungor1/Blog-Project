<!--Header-->
<%- include('partials/_header') -%>

  <body>
    <!-- Navigation -->
    <%- include('partials/_navigation') -%>

      <!-- Page Header -->
      <header class="masthead" style="background-image: url('img/post-bg.jpg')">
        <div class="overlay"></div>
        <div class="container">
          <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
              <div class="post-heading">
                <h1>
                  <%= blog.title %>
                </h1>
                <h2 class="subheading">
                  <%= blog.content.slice(0,100) %>
                </h2>
                <span class="meta">Posted by
                  <a href="#">MarSoft Agency</a>
                  on <%= `${blog.dateCreated.getDate().toString().padStart(2, "0" )}/${(blog.dateCreated.getMonth() +
                    1).toString().padStart(2, "0" )}/${blog.dateCreated.getFullYear().toString()}` %>
                    <%= (blog.dateCreated).format %></span>
              </div>
            </div>
          </div>
        </div>
      </header>
      <!-- Post Content -->
      <article>
        <div class="container">
          <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
              <p>
                <%= blog.content %>
              </p>
              <a href="/blog/edit/<%= blog._id %>" type="submit" class="btn btn-primary mt-5" id="updateButton">Update
                Blog</a>
              <a onclick="return confirm('Are you sure you want to delete this blog?');"
                href="/blog/delete/<%= blog._id %>?_method=DELETE" type="submit" class="btn btn-primary mt-5"
                id="updateButton">Delete
                Blog</a>
            </div>
          </div>
        </div>
      </article>

      <hr>

      <!--Footer-->
      <%- include('partials/_footer') -%>
  </body>

  </html>